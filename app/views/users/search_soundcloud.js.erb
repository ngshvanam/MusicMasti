$("#soundcloud_loading").css("display","none");
$("#soundcloud_result_count").text("<%=@playlist.count%> Results");
<%if @playlist.count == 0 %>
$("#soundcloud_results").html("<p>No results found.</p>");
<%else%>
$("#soundcloud_results").html("<ul id='soundcloud_result_list' class='result-list'></ul>");
<%end%>
<%@playlist.each do |song| %>
 $("#soundcloud_result_list").append("<li>\
				<a href='<%=song['permalink_url']%>' target='m'><%=song['permalink']%></a>\
				<span class='album'><%=song['user']['permalink']%></span>\
			</li>");
<%end%>
